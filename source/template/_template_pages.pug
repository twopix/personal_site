include ./common/data
include ./common/_mixins

- var HOMEPAGE = false;
block variables

doctype html
html
  head
    meta(charset="utf-8")
    title #{title}
    meta(content="George Melidis" name="author")
    meta(content="#{title}" name="description")
    meta(content="" name="keywords")
    meta(content="width=device-width, initial-scale=1" name="viewport")
    meta(content="ie=edge" http-equiv="x-ua-compatible")

    //- favicon block start
    link(rel='shortcut icon' href='./assets/img/viking.png' type='image/png')
    //- favicon block end

    link(rel='stylesheet' href='/assets/css/foundation.css')
    link(rel='stylesheet' href='/assets/css/app.css')
    script(src='/assets/js/foundation.js' defer)
    script(src='/assets/js/app.js' defer)
    script(src="https://use.fontawesome.com/416820a4f6.js")
    <!--[if lt IE 9]>
    script(src="http://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js")
    <![endif]-->

  body.page
    include ./common/header
    main.main__page#main
      block content

    block content_footer

    include ./common/footer

    block scripts